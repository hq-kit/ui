{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "ui": {
            "type": "string",
            "description": "Path to the UI components directory"
        },
        "css": {
            "type": "string",
            "description": "Path to the global CSS file"
        },
        "lib": {
            "type": "string",
            "description": "Path to the lib directory"
        }
    },
    "required": ["ui", "css", "lib"]
}
